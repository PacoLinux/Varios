    138					;**-CLSFIL-CLOSE FILE
    139					;
    140					; THIS ROUTINE ACCEPTS AS INPUT A LOGICAL UNIT NUMBER AND CLOSES THE
    141					; FILE OPEN ON THAT LUN.  IF THE STATUS OF THE FILE SPECIFIES
    142					; THAT THE FILE IS TEMPORARY, THEN THE FILE IS DELETED AFTER IT IS CLOSED.
    143					;
    144					; INPUTS:
    145					;
    146					;	2(R5) IS THE ADDRESS OF THE LUN
    147					;	4(R5) IS THE STATUS OF THE CLOSE
    148					;		0 = CLOSE AND SAVE FILE
    149					;		1 = CLOSE AND DELETE FILE
    150					;		2 = CLOSE, SPOOL AND SAVE FILE
    151					;		3 = CLOSE, SPOOL AND DELETE FILE
    152					;	6(R5) IS THE ADDRESS OF THE SUCCESS/ERROR CODE
    153					;
    154					; OUTPUTS:
    155					;
    156					;	@6(R5) CONTAINS THE FAILURE/SUCCESS CODES FOR THE ROUTINE
    157					;		 >0 = SUCCESS, FILE ON LUN SPECIFIED CLOSED
    158					;		 -1 = ERROR, THE FILE WAS NOT OPEN
    159					;		 -2 = ERROR, UNABLE TO CLOSE AND DELETE FILE
    160					;		 -3 = ERROR, UNABLE TO CLOSE AND SAVE FILE
    161					;		 -4 = ERROR, UNABLE TO SPOOL FILE
    162					;		 -5 = ERROR, UNABLE TO DELETE SPOOLED FILE
    163					;		 -6 = ILLEGAL STATUS FOR CLOSE
    164					;
    165					;	@4(R5) CONTAINS THE FOLLOWING IF THE FAILURE CODE WAS -5 OR -6:
    166					;		<0 = STANDARD SYSTEM ERROR CODE OR DIRECTIVE STATUS WORD
    167					;
    168					;-
    169	000432	012775 	000001 	000006 	CLSFIL:: MOV	#1,@6(R5)	;ASSUME SUCCESS
    170	000440					CALL	LUNFDB		;GET FDB ADDRESS FOR THIS LUN
    171	000444	103420 				BCS	10$		;ERROR, FILE NOT OPEN
    172	000446	027527 	000004 	000003 		CMP	@4(R5),#3	;CHECK FOR LEGAL CLOSE STATUS
    173	000454	003016 				BGT	20$		;TOO LARGE, ERROR
    174	000456	027527 	000004 	000002 		CMP	@4(R5),#2	;SPOOL FILE?
    175	000464	002024 				BGE	50$		;YES, BRANCH
    176	000466	005775 	000004 			TST	@4(R5)		;NO, SAVE FILE?
    177	000472	001411 				BEQ	30$		;YES, BRANCH
    178	000474	002406 				BLT	20$		;NEGATIVE CODE, ERROR
    179	000476					DELET$	R0		;NO, CLOSE AND DELETE FILE
    180	000502	103525 				BCS	91$		;ERROR
    181	000504	000407 				BR	40$		;RETURN
    182	000506	000167 	000236 		10$:	JMP	90$		;ERROR RETURN
    183	000512	000167 	000316 		20$:	JMP	95$		;ERROR RETURN
    184	000516				30$:	CLOSE$	R0		;CLOSE AND SAVE FILE
    185	000522	103521 				BCS	92$		;ERROR
    186	000524	062701 	000000G		40$:	ADD	#LUNMAP,R1	;GET LUN MAPPING LOCATION
    187	000530	005011 				CLR	(R1)		;CLEAR LUN MAPPING ENTRY
