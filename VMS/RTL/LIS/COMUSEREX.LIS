                                     000E   143 
                          81     D5  000E   144 	TSTL	(R1)+			; skip over first entry
            81         04 AC     D0  0010   145 	MOVL	proc_entry_pt(AP), (R1)+; insert address of users exit
                                     0014   146 					; handler
            81            01     D0  0014   147 	MOVL	#1, (R1)+		; which will be called with one argument
            61         04 A1     DE  0017   148 	MOVAL	4(R1), (R1)		; namely, the address of a word con-
                                     001B   149 					; taining reason for termination
                                     001B   150 ;
                                     001B   151 ; Call DCLEXH to declare termination handler
                                     001B   152 ;
                                     001B   153 
                                     001B   154 	$DCLEXH_S	(R0)		; R0 = return code
            07            50     E8  0024   155 	BLBS	R0, 10$			; branch if success
   00000000'EF            00     FB  0027   156 	CALLS	#0, FOR$$SIG_FATINT	; signal, never to return
                                     002E   157 
                                 04  002E   158 10$:	RET				; R0 = completion status
