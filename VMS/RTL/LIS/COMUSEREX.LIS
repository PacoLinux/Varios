                                     0000    86 	.SBTTL	USEREX - Main Entry Point
                                     0000    87 
                                     0000    88 ;++
                                     0000    89 ; FUNCTIONAL DESCRIPTION:
                                     0000    90 ;
                                     0000    91 ;	1) Call FOR$GET_VM to get the address of a termination control
                                     0000    92 ;	   block of length 5 longwords (20 bytes) from virtual memory.
                                     0000    93 ;	2) Insert the address of user specified termination procedure
                                     0000    94 ;	   into second longword of the termination control block and the
                                     0000    95 ;	   number of termination arguments (1) into low byte of its
                                     0000    96 ;	   third longword.  Point the fourth word at the fifth word.
                                     0000    97 ;	3) Call $DCLTRM to declare termination handler.
                                     0000    98 ;
                                     0000    99 ; CALLING SEQUENCE:
                                     0000   100 ;
                                     0000   101 ;	CALL USEREX (procedure_entry_point.rla.r)
                                     0000   102 ;
                                     0000   103 ; INPUT PARAMETERS:
                                     0000   104 ;
                                     0000   105 ;	procedure_entry_point.rla.r
                                     0000   106 ;
                                     0000   107 ; IMPLICIT INPUTS:
                                     0000   108 ;	NONE
                                     0000   109 ;
                                     0000   110 ; OUTPUT PARAMETERS:
                                     0000   111 ;	NONE
                                     0000   112 ;
                                     0000   113 ; IMPLICIT OUTPUTS:
                                     0000   114 ;	NONE
                                     0000   115 ;
                                     0000   116 ; COMPLETION CODES:
                                     0000   117 ;
                                     0000   118 ;	NONE
                                     0000   119 ;
                                     0000   120 ; SIDE EFFECTS:
                                     0000   121 ;
                                     0000   122 ;	SIGNAL_STOPs insufficient virtual memory,
                                     0000   123 ;	and fatal internal error if can't establish exit handler.
                                     0000   124 ;
                                     0000   125 ;--
                                     0000   126 
                                     0000   127 
                                     0000   128 
                               0000' 0000   129 	.ENTRY	USEREX, ^M<>
                                     0002   130 
                                     0002   131 ;
                                     0002   132 ; Call FOR$$GET_VM
                                     0002   133 ;
                                     0002   134 
                          14     DD  0002   135 	PUSHL	#20			; get 20 bytes
   00000000'EF            01     FB  0004   136 	CALLS	#1, FOR$$GET_VM		; from virtual memory
            51            50     D0  000B   137 	MOVL	R0, R1			; R0=R1 -> allocated memory
                                     000E   138 
                                     000E   139 ;
                                     000E   140 ; Insert address of user specified procedure and number of termination
                                     000E   141 ; argument (=1) into TCB
                                     000E   142 ;
COM$USEREX      ; F4P COMPATIBILITY - USER EXIT PROCEDURE SPECI  21-AUG-1978 18:53:47   VAX-11 MACRO X0.3-11               Page   5
