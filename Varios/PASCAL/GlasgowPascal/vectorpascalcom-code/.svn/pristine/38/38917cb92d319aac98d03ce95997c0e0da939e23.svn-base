unit mandspec;
interface
const imsize = 2048     ;imlim=imsize-1;
      { the following specifies the region of the set to be explored }
      xspan = 2.0; 
      yspan = 2.0;
      xorigin =-1.50;
      yorigin = -1.0;
      xstep = xspan/imsize;
      ystep = yspan/ imsize;
      escapelimit =255    ;
      pixelshift = 1.0/ escapelimit;
      escapebound =4.0;
type
	edge = 0..imlim;
        
	picture = array[edge,edge] of pixel;
implementation
begin
end.
