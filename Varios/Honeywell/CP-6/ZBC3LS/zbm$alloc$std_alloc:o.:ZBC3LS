       20        20             std_alloc(phead, size, count, pcnt)
       21        21              char **phead;
       22        22              register unsigned int size;
       23        23              int *pcnt;
       24        24             {
       25        25    1         register char *p;
       26        26    1
       27        27    1         if (*phead == 0)  {
       28        28    2
       29        29    2            p = Malloc(size * count);
       30        30    2            *pcnt += count;
       31        31    2            ((struct xxx *) p)->next = 0;
       32        32    2            while (--count) {
       33        33    3               p += size;
       34        34    3               ((struct xxx *) p)->next = p - size;
       35        35    3            }
       36        36    2            *phead = p;
