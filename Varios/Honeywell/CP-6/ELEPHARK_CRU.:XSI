!DEFAULT SIACCT=:XSI,GNACCT=:XSI,LBACCT=:LIBRARY, XACCT=:XSI
!JOB NAME=ELEPHARK,WSN=LOCAL
!RESOURCE MEM=256,TIME=5,NHPSN
!ROUTE Lee Hallin, LADC
!"
!"  By default, the output created by this job is EDGEMARKed.
!"  However, if you DON'T want it EDGEMARKed, do a DEST=LP substitution on
!"  your BATCH or XEQ command such as:
!"    !BATCH ELEPHARK_CRU.XACCT DEST=LP
!"
!DEFAULT DEST=*LS
!PL6 ELEPHARK_SI61.SIACCT OVER *ELEPHARK_OU61.GNACCT,DEST(OU,LS,SR(.SIACCT,.LBACCT,.XACCT),NWA,SC)
!PL6 ELEPHARK_SI62.SIACCT INTO *ELEPHARK_OU62.GNACCT,DEST(OU,LS,SR(.SIACCT,.LBACCT,.XACCT),NWA,SC)
!LET LISTING= 'DEST'
!IF LISTING = 'LP' THEN GOTO DONT_EDGEMARK
!LET MONNUM=$SUBSTR($DATE,2,2)
!LET MONTHS='JanFebMarAprMayJunJulAugSepOctNovDec'
!LET RIGHT=$SUBSTR(MONTHS,(MONNUM*3)-3,3) || ' ' || $SUBSTR($DATE,4,2)
!IF $SUBSTR(RIGHT,4,1) ~= '0' THEN GOTO DATE_OK
!LET RIGHT= $SUBSTR(RIGHT,0,4) || $SUBSTR(RIGHT,5,1)
!DATE_OK:
!EDGEMARK.XACCT DEST TO LP@(F='PERF',L='ELEPHARK.X',R='%RIGHT')
!DONT_EDGEMARK:
!LINK ;
      B_COPYRIGHT.LBACCT,;             " Copyright notice "
      *ELEPHARK_OU61.GNACCT;           " Root             "
        (*ELEPHARK_OU62.GNACCT) ;      " Overlay          "
 OVER ;
      ELEPHARK.GNACCT(IP=25,DP=10,BREF=1)
