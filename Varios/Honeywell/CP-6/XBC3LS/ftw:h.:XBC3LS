   13      #ifndef  __ftw_h
   14      #define  __ftw_h
   15
   16      #define  FTW_F    0     /* file */
   17      #define  FTW_D    1     /* directory */
   18      #define  FTW_DNR  2     /* directory without read permission */
   19      #define  FTW_NS   3     /* unknown type, stat failed */
   20
