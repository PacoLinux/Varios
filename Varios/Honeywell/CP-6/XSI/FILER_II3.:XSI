/*** FLAG SET IF A NON-X BUFFER IS MODIFIED ***/
DCL   NOT_X_ONLY        SBIN WORD ALIGNED   SYMREF;
 
/*** FLAG RESET WHEN AN EXIT CONDITION OR COMMAND IS ENCOUNTERED ***/
DCL   USER_WANTS_FILER_TO_RUN SBIN WORD ALIGNED SYMREF;
 
/*** BASED VALUE CONVERSION ***/
DCL   BASE(0:3)         SBIN WORD ALIGNED   SYMREF;
DCL   BASE_WIDTH(0:3)   SBIN WORD ALIGNED   SYMREF;
DCL   MAX_BASE_IX       SBIN WORD ALIGNED   SYMREF;
 
