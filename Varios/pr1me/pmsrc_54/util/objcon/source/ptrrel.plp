/* PTRREL.PLP, EMACSSRC>OBJCON>SOURCE, TOOLS GROUP, 11/10/82
/* Routine to do pointer offsets for 31 bit displacements (SEGNO, WORDNO)
/* COPYRIGHT (C) 1982, PRIME COMPUTER, INC., NATICK, MA, 01760
/*************************************************************************/

ptrrel: proc(pointer, offset) returns(fixed binary(31));

  declare (pointer, offset) fixed binary(31);

  return (pointer + offset);

 end /* ptrrel */;

